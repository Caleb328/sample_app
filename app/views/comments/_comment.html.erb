<div class="well">
<p>
  <strong>Commenter:</strong>
  <% @user = User.find_by(id: comment.user_id) %>
  <%= @user.name %>
</p>
 
<p>
  <strong>Comment: </strong>
  <%= comment.title%>
  <br>
  <%= comment.comment %>
</p>


<p>
<% if comment.user_id == current_user.id %>
  <%= link_to 'Delete Comment', [comment.event, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
<% else %>
<% end %>
</p>
</div>