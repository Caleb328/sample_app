<div class="hero-unit">
	<% if signed_in? %>
	<br>
	  <div class="row">
		<section>
		  <%= render 'shared/homepage_search' %>
	  	</section>
	  </div>
	  <br>
   	<% else %>
	<br>
	  <div class="row">
		<section>
		  <%= render 'shared/homepage_search' %>
	  	</section>
  	  </div>
	  <br>
	  <br>
		<div class="row" id="home_signup">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary centered offset4 span4"%>
			<div class="col-md-4"></div>
			<div class="col-md-4"></div>
		</div>
	<% end %>

	<style>
		footer {
		    position: fixed;
		    width: 70%;
			left: 15%;
		    bottom: 20px;
		    margin-top: 45px;
		    padding-top: 5px;
		    border-top: 1px solid #cccccc;
		    color: #999;
		    background-color: white;
		    background-size: 100% 100%;
		    height: 43px;
		    padding-left: 50px;
		    padding-right: 50px;
		    border-radius: 5px;
		    filter:alpha(opacity=80);
		    opacity:.8;
		}
		#home_search_bar {
			position: fixed;
			width: 70%;
			left: 15%;
			top: 48%;
		}
		#home_signup {
			position: fixed;
			width: 60%;
			left: 20%;
			top: 60%;
		}
		#home_logo {
			position: fixed;
			width: 70%;
			left: 15%;
			top: 20%;
		}
	</style>
	
	