<div class="hero-unit" >
  <% provide(:title, 'Create Event') %>
  <h1>Create Event</h1>

  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@event) do |f| %>
  	  <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :description %>
        <%= f.text_area :description %><br>
		
		<%= f.hidden_field(:avatar_cache)%>
		<%= f.file_field :avatar %>

        <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>