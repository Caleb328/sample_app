<div class="hero-unit" >
  <% provide(:title, 'Edit event') %>
  <div class="widget">
  	<!-- Widget heading -->
  	  <h3 class="bg-primary innerAll half border-bottom margin-none">Edit Your Event</h3>
  	
	<!-- // Widget heading END -->	
  	<div class="widget-body">
	  <%= form_for(@event) do |f| %>
	    <div class="row">
	    	<%= render 'shared/error_messages', object: f.object %>
	    </div>
	    <div class="row">
			<div class="col-md-6">
			    <h5>Title</h5>
		  	    <div class="innerB">
				  <%= f.text_field :title, placeholder: "title...", class: "form-control" %>
		  		</div>
				
			    <h5>Event date</h5>
		  	    <div class="innerB date" id="datetimepicker2">
				  <%= f.text_field :date, placeholder: "event date...", class: "form-control" %>
		  		</div>
				
			</div>
			
			<div class="col-md-6">
			    <h5>Number of participants</h5>
		  	  <div class="innerB">
				  <%= f.text_field :capacity, placeholder: "capacity...", class: "form-control" %>
		  		</div>
			    <h5>Event time</h5>
		  	    <div class="innerB bootstrap-timepicker">
				    <%= f.text_field :time, placeholder: "event time...", class: "form-control" %>
		  		</div>
				
			</div>
		</div>
		
	    <div class="row">
			<div class="col-md-11">
		      <h5>Event location</h5>
	  	      <div class="innerB" id="location_fields">
		        <input id="geocomplete" type="text" class="form-control" placeholder="<%= @event.street %>" size="90" />
		        <input name="country" type="hidden" value="" />
	  		  </div>
		    </div>
			<div class="col-md-1">
				<h5>&nbsp;</h5>
				<input id="find" type="button" value="find" class="btn btn-small btn-primary"/>
			</div>
		</div>
		<div class="row">
	        <div class="map_canvas col-md-12 center" style="margin-left: 10px; width:900px; height:300px"></div>
		</div>
		<br>
	    <div class="row">
			<div class="col-md-6">
			    <h5>Region</h5>
		  	    <div class="innerB">
				  <%= f.text_field :region, :readonly => true, class: "form-control"  %>
				  <%= f.hidden_field :street %>
		  		</div>
			</div>
			
			<div class="col-md-6">
			    <h5>Picture</h5>
			    <div class="row">
					<div class="col-md-4">
			    		<%= image_tag(@event.avatar_url(:standard)) %>
					</div>
					<div class="col-md-6	">
						 <div class="innerB fileupload fileupload-new margin-none" data-provides="fileupload">
						  	<span class="btn btn-default btn-file">
						  		<span class="fileupload-new">Select file</span>
						  		<span class="fileupload-exists">Change</span>
