<div class="hero-unit" >
  <% provide(:title, "Sign in") %>
<div class="widget">
  <h4 class="bg-primary innerAll half border-bottom margin-none">Sign in</h4>
  <div class="row">
      <%= form_for(:session, url: sessions_path, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
	  	<br>
        <div class="form-group">
            <%= f.label :email, class: 'col-sm-4 control-label'  %>
            <div class="col-sm-4">
                <%= f.text_field :email, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, class: 'col-sm-4 control-label'  %>
            <div class="col-sm-4">
                <%= f.password_field :password, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group" id="list_items">
            <div class="col-sm-offset-4 col-sm-6">
                <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
				<br>
				<p>New user? <%= link_to "Sign up now!", signup_path %></p>
            </div>
        </div>
      <% end %>
      
  </div>
</div>
	